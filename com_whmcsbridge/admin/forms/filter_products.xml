<?xml version="1.0" encoding="utf-8"?>
<form>
    <fields name="filter">
        <field
            name="search"
            type="text"
            label="COM_WHMCSBRIDGE_FILTER_SEARCH_LABEL"
            description="COM_WHMCSBRIDGE_FILTER_SEARCH_DESC"
            hint="JSEARCH_FILTER"
        />

        <field
            name="status"
            type="list"
            label="COM_WHMCSBRIDGE_FIELD_STATUS"
            onchange="this.form.submit();"
        >
            <option value="">- Select Status -</option>
            <option value="Active">Active</option>
            <option value="Suspended">Suspended</option>
            <option value="Terminated">Terminated</option>
            <option value="Cancelled">Cancelled</option>
            <option value="Pending">Pending</option>
            <option value="Fraud">Fraud</option>
        </field>

        <field
            name="product_group"
            type="list"
            label="COM_WHMCSBRIDGE_FIELD_PRODUCT_GROUP"
            onchange="this.form.submit();"
        >
            <option value="">- Select Product Group -</option>
        </field>
    </fields>

    <fields name="list">
        <field
            name="fullordering"
            type="list"
            label="JGLOBAL_SORT_BY"
            statuses="*"
            onchange="this.form.submit();"
        >
            <option value="">JGLOBAL_SORT_BY</option>
            <option value="a.id ASC">JGRID_HEADING_ID ASC</option>
            <option value="a.id DESC">JGRID_HEADING_ID DESC</option>
            <option value="a.product_name ASC">COM_WHMCSBRIDGE_FIELD_PRODUCT_NAME ASC</option>
            <option value="a.product_name DESC">COM_WHMCSBRIDGE_FIELD_PRODUCT_NAME DESC</option>
            <option value="a.status ASC">COM_WHMCSBRIDGE_FIELD_STATUS ASC</option>
            <option value="a.status DESC">COM_WHMCSBRIDGE_FIELD_STATUS DESC</option>
        </field>

        <field
            name="limit"
            type="limitbox"
            label="JGLOBAL_LIST_LIMIT"
            class="input-mini"
            onchange="this.form.submit();"
        />
    </fields>
</form>
