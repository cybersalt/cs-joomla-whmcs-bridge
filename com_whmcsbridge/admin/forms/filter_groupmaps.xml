<?xml version="1.0" encoding="utf-8"?>
<form>
    <fields name="filter">
        <field
            name="search"
            type="text"
            label="COM_WHMCSBRIDGE_FILTER_SEARCH_LABEL"
            description="COM_WHMCSBRIDGE_FILTER_SEARCH_DESC"
            hint="JSEARCH_FILTER"
        />

        <field
            name="map_type"
            type="list"
            label="COM_WHMCSBRIDGE_FIELD_MAP_TYPE"
            onchange="this.form.submit();"
        >
            <option value="">- Select Type -</option>
            <option value="product">COM_WHMCSBRIDGE_MAP_TYPE_PRODUCT</option>
            <option value="product_group">COM_WHMCSBRIDGE_MAP_TYPE_PRODUCT_GROUP</option>
            <option value="status">COM_WHMCSBRIDGE_MAP_TYPE_STATUS</option>
        </field>

        <field
            name="published"
            type="list"
            label="JSTATUS"
            onchange="this.form.submit();"
        >
            <option value="">JOPTION_SELECT_PUBLISHED</option>
            <option value="1">JPUBLISHED</option>
            <option value="0">JUNPUBLISHED</option>
        </field>
    </fields>

    <fields name="list">
        <field
            name="fullordering"
            type="list"
            label="JGLOBAL_SORT_BY"
            statuses="*"
            onchange="this.form.submit();"
        >
            <option value="">JGLOBAL_SORT_BY</option>
            <option value="a.id ASC">JGRID_HEADING_ID ASC</option>
            <option value="a.id DESC">JGRID_HEADING_ID DESC</option>
            <option value="a.priority ASC">COM_WHMCSBRIDGE_FIELD_PRIORITY ASC</option>
            <option value="a.priority DESC">COM_WHMCSBRIDGE_FIELD_PRIORITY DESC</option>
        </field>

        <field
            name="limit"
            type="limitbox"
            label="JGLOBAL_LIST_LIMIT"
            class="input-mini"
            onchange="this.form.submit();"
        />
    </fields>
</form>
