<?xml version="1.0" encoding="utf-8"?>
<form>
    <fields name="filter">
        <field
            name="search"
            type="text"
            label="COM_WHMCSBRIDGE_FILTER_SEARCH_LABEL"
            description="COM_WHMCSBRIDGE_FILTER_SEARCH_DESC"
            hint="JSEARCH_FILTER"
        />

        <field
            name="whmcs_status"
            type="list"
            label="COM_WHMCSBRIDGE_FIELD_WHMCS_STATUS"
            onchange="this.form.submit();"
        >
            <option value="">- Select Status -</option>
            <option value="Active">Active</option>
            <option value="Inactive">Inactive</option>
            <option value="Closed">Closed</option>
        </field>

        <field
            name="sync_status"
            type="list"
            label="COM_WHMCSBRIDGE_FIELD_SYNC_STATUS"
            onchange="this.form.submit();"
        >
            <option value="">- Select Sync Status -</option>
            <option value="synced">Synced</option>
            <option value="pending">Pending</option>
            <option value="failed">Failed</option>
        </field>
    </fields>

    <fields name="list">
        <field
            name="fullordering"
            type="list"
            label="JGLOBAL_SORT_BY"
            statuses="*"
            onchange="this.form.submit();"
        >
            <option value="">JGLOBAL_SORT_BY</option>
            <option value="a.id ASC">JGRID_HEADING_ID ASC</option>
            <option value="a.id DESC">JGRID_HEADING_ID DESC</option>
            <option value="a.whmcs_email ASC">COM_WHMCSBRIDGE_FIELD_WHMCS_EMAIL ASC</option>
            <option value="a.whmcs_email DESC">COM_WHMCSBRIDGE_FIELD_WHMCS_EMAIL DESC</option>
            <option value="a.last_sync ASC">COM_WHMCSBRIDGE_FIELD_LAST_SYNC ASC</option>
            <option value="a.last_sync DESC">COM_WHMCSBRIDGE_FIELD_LAST_SYNC DESC</option>
        </field>

        <field
            name="limit"
            type="limitbox"
            label="JGLOBAL_LIST_LIMIT"
            class="input-mini"
            onchange="this.form.submit();"
        />
    </fields>
</form>
